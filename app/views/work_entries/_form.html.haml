= simple_form_for @work_entry, :url => (@work_entry.new_record? ? work_entries_path(@day.year, @day.month, @day.day) : work_entry_path(@day.year, @day.month, @day.day, @work_entry.id)), :method => @work_entry.new_record? ? :post : :put do |f|
  = f.association :work_chart, :collection => @work_charts, :label_method => :full_label
  = f.input :date_performed, :as => :hidden, :input_html => { :value => @day }
  = f.simple_fields_for :work_entry_fees do |fee|
    = fee.input :fee
    = fee.input :created_by, :as => :hidden, :input_html => { :value => current_user.email }
    = fee.input :modified_by, :as => :hidden, :input_html => { :value => current_user.email }
  = f.simple_fields_for :work_entry_durations do |d|
    = d.input :duration, :as => :interval
    = d.input :kind_code, :as => :select, :collection => [], :input_html => { :class => "kind_code_select" }
    = d.input :created_by, :as => :hidden, :input_html => { :value => current_user.email }
    = d.input :modified_by, :as => :hidden, :input_html => { :value => current_user.email }
  = f.input :description

- content_for :side do
  = button_tag(type: 'submit', class: "button", :onclick => "$('form').submit();") do
    = "Save"
