- content_for :header do
  %h1 Your work days
  %h4 Navigate through your work days at End Point

%table{:cellspacing => 0}
  %thead
    %th{:colspan => 2} Day
    %th Time
    %th
  %tbody
    - @days.each do |day|
      %tr
        %td= t('date.day_names')[day.date.wday]
        %td
          - if day.date.to_date == Date.today
            Today
          - else
            = "#{day.date.to_date.to_s}"
        %td= "#{day.time.hour}h #{day.time.min}m"
        %td= link_to "Go to day", show_work_day_entries_path(day.date.day, day.date.month, day.date.year)

%div.pagination
  = link_to "Previous week", week_work_days_path(params[:weeks_from_now].nil? ? 1 : params[:weeks_from_now].to_i + 1)
  - if !params[:weeks_from_now].nil? && params[:weeks_from_now] != 0
    = link_to "Next week", week_work_days_path(params[:weeks_from_now].to_i - 1)    
  - if !params[:weeks_from_now].nil? && params[:weeks_from_now] != 0
    = link_to "This week", root_path

- content_for :side do
  - today = DateTime.now
  = link_to "Go to today", show_work_day_entries_path(today.day, today.month, today.year), :class => "button"
